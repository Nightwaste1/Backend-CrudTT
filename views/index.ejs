<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pets CRUD</title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  <h1>Pets List</h1>
  <a href="/new">Add New Pet</a>
  <ul>
    <% pets.forEach(pet => { %>
      <li>
        <%= pet.name %> - <%= pet.age %> - <%= pet.type %>
        <a href="/pets/<%= pet._id %>/edit">Edit</a>
        <form action="/pets/<%= pet._id %>/delete" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
